<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>

<fx:root minHeight="225.0" minWidth="200.0" type="BorderPane"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<ButtonBar buttonMinWidth="25.0"
			BorderPane.alignment="CENTER">
			<buttons>
				<Button style="-fx-background-radius: 0;" text="-"
					ButtonBar.buttonData="LEFT" onAction="#handleRowSubtracted" />
				<Button style="-fx-background-radius: 0;" text="+"
					ButtonBar.buttonData="RIGHT" onAction="#handleRowAdded" />
			</buttons>
			<padding>
				<Insets left="5.0" right="5.0" />
			</padding>
		</ButtonBar>
	</top>
	<center>
		<ListView prefHeight="200.0" prefWidth="200.0"
			BorderPane.alignment="CENTER" fx:id="listView" />
	</center>
</fx:root>
