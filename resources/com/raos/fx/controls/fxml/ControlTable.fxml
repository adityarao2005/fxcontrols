<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<fx:root minHeight="225.0" minWidth="200.0" type="BorderPane"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<AnchorPane>
			<children>
				<Button onAction="#handleRowSubtracted" prefHeight="25.0"
					prefWidth="25.0" style="-fx-background-radius: 0;" text="-"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="5.0"
					AnchorPane.topAnchor="0.0" />
				<Label fx:id="titleLabel" alignment="CENTER"
					contentDisplay="CENTER" layoutX="25.0" textAlignment="CENTER"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="30.0"
					AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="0.0" />
				<Button alignment="CENTER_RIGHT" layoutX="25.0"
					onAction="#handleRowAdded" prefHeight="25.0" prefWidth="25.0"
					style="-fx-background-radius: 0;" text="+"
					AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="5.0"
					AnchorPane.topAnchor="0.0" />
			</children>
		</AnchorPane>
	</top>
	<center>
		<ListView fx:id="listView" prefHeight="200.0"
			prefWidth="200.0" BorderPane.alignment="CENTER" />
	</center>
</fx:root>
